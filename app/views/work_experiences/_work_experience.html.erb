<li class="list-group-item" id="work-experience-item-<%= work_experience.id %>">
  <div class="row">
    <div class="col">
      <div class="d-flex justify-content-start">
        <p class="fw-bold"><%= work_experience.job_title %></p>
      </div>
    </div>
    <div class="col">
      <div class="d-flex justify-content-end">
        <%= link_to edit_work_experience_path(work_experience), data: { turbo_frame: 'modal' } do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
        <%= link_to work_experience, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
          <i class="bi bi-trash-fill ms-3 text-danger"></i>
        <% end %>
      </div>
    </div>
  </div>
  <small><%= work_experience.company_with_employment_type %></small><br>
  <small><%= work_experience.job_location %></small><br>
  <small><%= work_experience.job_duration %></small><br>
</li>
