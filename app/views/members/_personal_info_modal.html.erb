<%= turbo_frame_tag :modal, target: :_top do %>
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="modal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Edit your personal details</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with model: current_user, url: update_member_personal_details_path, method: :put do |f| %>
          <div class="modal-body">
            <div class="row">
              <div class="col-lg-12">

                <div class="form-group row">
                  <div class="col-lg-6">
                    <%= f.label :first_name, class: 'form-label' %>
                    <%= f.text_field :first_name, class: 'form-control' %>
                  </div>
                  <div class="col-lg-6">
                    <%= f.label :last_name, class: 'form-label' %>
                    <%= f.text_field :last_name, class: 'form-control' %>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-lg-6">
                    <%= f.label :city, class: 'form-label' %>
                    <%= f.text_field :city, class: 'form-control' %>
                  </div>
                  <div class="col-lg-6">
                    <%= f.label :state, class: 'form-label' %>
                    <%= f.text_field :state, class: 'form-control' %>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-lg-6">
                    <%= f.label :country, class: 'form-label' %>
                    <%= f.text_field :country, class: 'form-control' %>
                  </div>
                  <div class="col-lg-6">
                    <%= f.label :pincode, class: 'form-label' %>
                    <%= f.text_field :pincode, class: 'form-control' %>
                  </div>
                </div>

                <div class="form-group row mb-3">
                  <div class="col-lg-12">
                    <%= f.label :profile_title, class: 'form-label' %>
                    <%= f.text_field :profile_title, class: 'form-control' %>
                  </div>
                </div>

              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= f.submit 'Save Changes', data: { action: 'click->modal#submitEnd' }, class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
